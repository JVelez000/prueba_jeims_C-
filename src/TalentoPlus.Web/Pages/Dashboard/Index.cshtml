@page
@model TalentoPlus.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard TalentoPlus";
}

<div class="container-fluid mt-4">
    <h1 class="mb-4">Dashboard de Gestión</h1>

    <!-- 1. TARJETAS DE KPI (Estilo Moderno y Compacto) -->
    <div class="row mb-5 g-4">
        
        <!-- Tarjeta 1: Total Empleados -->
        <div class="col-lg-4 col-sm-6">
            <div class="card shadow-sm border-0 rounded-4 h-100" style="border-left: 5px solid #007bff;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="card-text mb-0 text-muted small text-uppercase">Total Registrados</p>
                            <h3 class="card-title mb-0 fs-1 fw-bold">@Model.Metrics.TotalEmployees</h3>
                        </div>
                        <i class="bi bi-people-fill text-primary fs-3 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Tarjeta 2: Empleados Activos -->
        <div class="col-lg-4 col-sm-6">
            <div class="card shadow-sm border-0 rounded-4 h-100" style="border-left: 5px solid #28a745;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="card-text mb-0 text-muted small text-uppercase">Activos</p>
                            <h3 class="card-title mb-0 fs-1 fw-bold">@Model.Metrics.ActiveEmployees</h3>
                        </div>
                        <i class="bi bi-person-check-fill text-success fs-3 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Tarjeta 3: Empleados en Vacaciones (Tercer KPI) -->
        <div class="col-lg-4 col-sm-6">
            <div class="card shadow-sm border-0 rounded-4 h-100" style="border-left: 5px solid #ffc107;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="card-text mb-0 text-muted small text-uppercase">En Vacaciones</p>
                            <h2 class="card-title mb-0 fs-1 fw-bold">@Model.Metrics.VacationEmployees</h2>
                        </div>
                        <i class="bi bi-suitcase-lg-fill text-warning fs-3 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 2. SECCIÓN DE INTELIGENCIA ARTIFICIAL -->
    <div class="card shadow-lg border-0 rounded-4 mb-5">
        <div class="card-header bg-light border-bottom">
            <h4 class="mb-0"><i class="bi bi-cpu-fill me-2 text-info"></i> Consulta Inteligente con IA</h4>
        </div>
        <div class="card-body p-4">
            <p class="mb-3 text-muted">Escribe una pregunta y el sistema la procesará para darte una respuesta basada en los datos reales.</p>
            
            <form method="post" asp-page-handler="AskAI">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi bi-chat-left-text"></i></span>
                    <input type="text" asp-for="AISuggestion" class="form-control form-control-lg" placeholder="Ej: ¿Cuántos auxiliares hay en la plataforma? O ¿Cuál es el salario promedio de Tecnología?" />
                    <button class="btn btn-info btn-lg" type="submit">Consultar</button>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.AIResponse))
            {
                <div class="alert alert-info border-start border-4 border-info p-3 mt-3">
                    <strong>Respuesta:</strong>
                    <p class="mb-0 mt-1">@Model.AIResponse</p>
                </div>
            }
            
            @if (!ModelState.IsValid)
            {
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            }
        </div>
    </div>
    
    <!-- Botones de Navegación (Más limpios) -->
    <div class="row mt-4">
        <div class="col-12">
            <a asp-page="/Employees/Index" class="btn btn-lg btn-primary me-2 mb-2"><i class="bi bi-people-fill"></i> Gestión de Empleados</a>
            <a asp-page="/Import/Index" class="btn btn-lg btn-secondary me-2 mb-2"><i class="bi bi-file-arrow-up"></i> Importar Excel</a>
            <a href="#" class="btn btn-lg btn-success me-2 mb-2"><i class="bi bi-file-earmark-pdf"></i> Generar Reportes</a>
            <a href="#" class="btn btn-lg btn-danger mb-2"><i class="bi bi-gear-fill"></i> Configuración</a>
        </div>
    </div>
</div>