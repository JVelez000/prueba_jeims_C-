@page "{id:int}"
@model TalentoPlus.Web.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    
    <form method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="row">
            <!-- Datos Personales -->
            <div class="col-md-6">
                <h4>Datos Personales</h4>
                
                <div class="form-group mb-3">
                    <label asp-for="Employee.DocumentNumber" class="form-label">Número de Documento *</label>
                    <input asp-for="Employee.DocumentNumber" class="form-control" />
                    <span asp-validation-for="Employee.DocumentNumber" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Employee.FirstName" class="form-label">Nombres *</label>
                    <input asp-for="Employee.FirstName" class="form-control" />
                    <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Employee.LastName" class="form-label">Apellidos *</label>
                    <input asp-for="Employee.LastName" class="form-control" />
                    <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Employee.Email" class="form-label">Correo Electrónico *</label>
                    <input asp-for="Employee.Email" class="form-control" type="email" />
                    <span asp-validation-for="Employee.Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Employee.Phone" class="form-label">Teléfono</label>
                    <input asp-for="Employee.Phone" class="form-control" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Employee.BirthDate" class="form-label">Fecha de Nacimiento</label>
                    <input asp-for="Employee.BirthDate" class="form-control" type="date" />
                </div>
            </div>
            
            <!-- Datos Laborales -->
            <div class="col-md-6">
                <h4>Datos Laborales</h4>
                
                <div class="form-group mb-3">
                    <label asp-for="Employee.HireDate" class="form-label">Fecha de Contratación *</label>
                    <input asp-for="Employee.HireDate" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" />
                    <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Employee.Salary" class="form-label">Salario *</label>
                    <input asp-for="Employee.Salary" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                </div>
                
                <!-- Departamento -->
                <div class="form-group mb-3">
                    <label asp-for="Employee.DepartmentId" class="form-label">Departamento *</label>
                    <select asp-for="Employee.DepartmentId" class="form-control" asp-items="Model.Departments">
                        <option value="">Seleccione un departamento...</option>
                    </select>
                    <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
                </div>
                
                <!-- Cargo -->
                <div class="form-group mb-3">
                    <label asp-for="Employee.JobTitleId" class="form-label">Cargo *</label>
                    <select asp-for="Employee.JobTitleId" class="form-control" asp-items="Model.JobTitles">
                        <option value="">Seleccione un cargo...</option>
                    </select>
                    <span asp-validation-for="Employee.JobTitleId" class="text-danger"></span>
                </div>
                
                <!-- Nivel Educativo -->
                <div class="form-group mb-3">
                    <label asp-for="Employee.EducationLevelId" class="form-label">Nivel Educativo *</label>
                    <select asp-for="Employee.EducationLevelId" class="form-control" asp-items="Model.EducationLevels">
                        <option value="">Seleccione un nivel...</option>
                    </select>
                    <span asp-validation-for="Employee.EducationLevelId" class="text-danger"></span>
                </div>
                
                <!-- Estado Laboral -->
                <div class="form-group mb-3">
                    <label asp-for="Employee.EmploymentStatusId" class="form-label">Estado Laboral *</label>
                    <select asp-for="Employee.EmploymentStatusId" class="form-control" asp-items="Model.EmploymentStatuses">
                        <option value="">Seleccione un estado...</option>
                    </select>
                    <span asp-validation-for="Employee.EmploymentStatusId" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <!-- Información adicional -->
        <div class="row mt-3">
            <div class="col-12">
                <h4>Información Adicional</h4>
                
                <div class="form-group mb-3">
                    <label asp-for="Employee.ProfessionalProfile" class="form-label">Perfil Profesional</label>
                    <textarea asp-for="Employee.ProfessionalProfile" class="form-control" rows="3"></textarea>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Employee.Address" class="form-label">Dirección</label>
                    <textarea asp-for="Employee.Address" class="form-control" rows="2"></textarea>
                </div>
            </div>
        </div>
        
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Actualizar Empleado</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}