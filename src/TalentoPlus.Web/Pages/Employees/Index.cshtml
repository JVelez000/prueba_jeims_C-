@page
@model TalentoPlus.Web.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Empleados";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Lista de Empleados</h1>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Empleado
    </a>
</div>

<!-- BARRA DE BÚSQUEDA CON OPCIÓN LIMPIAR -->
<div class="card mb-4 shadow-sm">
    <div class="card-body p-3">
        <form method="get" class="row g-3 align-items-end">
            <!-- Campo de Búsqueda -->
            <div class="col-md-8">
                <label asp-for="SearchString" class="form-label small mb-0">Filtro</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" asp-for="SearchString" class="form-control" placeholder="Buscar por nombre, documento o correo..." />
                </div>
            </div>
            
            <!-- Botones -->
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-secondary">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
            <div class="col-md-2 d-grid">
                <!-- Botón Limpiar: Enlaza a la misma página sin SearchString -->
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Limpiar
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Documento</th>
                        <th>Nombre Completo</th>
                        <th>Departamento</th>
                        <th>Cargo</th>
                        <th>Estado</th>
                        <!-- ESTA COLUMNA ES LA QUE FALTABA -->
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Employees.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <p class="text-muted mb-0">No se encontraron empleados.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.Employees)
                        {
                            <tr>
                                <td class="align-middle">@item.DocumentNumber</td>
                                <td class="align-middle">@item.FirstName @item.LastName</td>
                                <td class="align-middle">@item.DepartmentName</td>
                                <td class="align-middle">@item.JobTitleName</td>
                                <td class="align-middle">
                                    <!-- Logica visual para el estado -->
                                    <span class="badge rounded-pill @(item.EmploymentStatusName.Contains("Activo") ? "bg-success" : 
                                                         item.EmploymentStatusName.Contains("Vacaciones") ? "bg-warning text-dark" : "bg-secondary")">
                                        @item.EmploymentStatusName
                                    </span>
                                </td>
                                <!-- BOTONES DE ACCIÓN MÁS GRANDES Y SEPARADOS -->
                                <td class="text-end">
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info text-white me-1" title="Detalles">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Eliminar">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                    <a asp-page-handler="DownloadPdf" asp-route-id="@item.Id" 
                                       class="btn btn-danger me-1" title="Descargar PDF">
                                        <i class="bi bi-file-pdf"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>